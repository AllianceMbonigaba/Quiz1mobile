<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->


    <AbsoluteLayout
        android:id="@+id/absoluteLayout"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/input_round_corners"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/absoluteLayout1"
        tools:ignore="Deprecated">

        <TextView
            android:id="@+id/session"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_x="9dp"
            android:layout_y="14dp"
            android:text="Session"
            android:drawableLeft="@drawable/session_icon"
            android:drawablePadding="10dp"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="177dp"
            android:layout_height="32dp"
            android:layout_marginTop="28dp"
            android:layout_x="180dp"
            android:layout_y="8dp"
            android:entries="@array/brew_array_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioSex" />
    </AbsoluteLayout>

    <EditText
        android:id="@+id/student_id"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/input_round_corners"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/card_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Student ID"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/student_email"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/input_round_corners"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_password" />

    <EditText
        android:id="@+id/student_name"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/input_round_corners"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Student Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_id" />

    <EditText
        android:id="@+id/student_password"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/input_round_corners"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName|textWebPassword"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_email">

        <AbsoluteLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_round_corners"
            android:backgroundTint="#FFFFFF">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="165dp"
                android:layout_y="13dp"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="257dp"
                android:layout_y="12dp"
                android:text="Female" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_x="7dp"
                android:layout_y="18dp"
                android:drawableLeft="@drawable/gender_icon"
                android:drawablePadding="10dp"
                android:text="Gender"
                android:textSize="18sp" />
        </AbsoluteLayout>


    </RadioGroup>

    <AbsoluteLayout
        android:id="@+id/absoluteLayout1"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/input_round_corners"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioSex">

        <TextView
            android:id="@+id/department"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_x="9dp"
            android:layout_y="14dp"
            android:drawableLeft="@drawable/department_icon"
            android:drawablePadding="10dp"
            android:text="Department"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="28dp"
            android:layout_x="161dp"
            android:layout_y="8dp"
            android:entries="@array/brew_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioSex" />
    </AbsoluteLayout>

    <Button
        android:id="@+id/savebtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/input_round_corners"
        android:backgroundTint="@color/appColour"
        android:text="Save"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/absoluteLayout"

        />


</androidx.constraintlayout.widget.ConstraintLayout>